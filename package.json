{
  "name": "contents",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "creative contents created by zce",
  "keywords": [
    "creative",
    "contents",
    "zce"
  ],
  "repository": "zce/contents",
  "license": "Unlicense",
  "author": "zce <w@zce.me> (https://zce.me)",
  "main": "build.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "standard --fix",
    "create": "plop",
    "format": "prettier --write **/*.{md,yml}",
    "build": "npm run format && node build",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "prettier": {
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "proseWrap": "never",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "renovate": {
    "extends": [
      "zce"
    ]
  },
  "devDependencies": {
    "dayjs": "1.11.6",
    "fast-glob": "3.2.12",
    "gh-pages": "4.0.0",
    "gray-matter": "4.0.3",
    "markdown-link-extractor": "3.1.0",
    "plop": "3.1.1",
    "prettier": "^2.7.1",
    "slugify": "1.6.5",
    "standard": "17.0.0",
    "yaml": "2.1.3"
  },
  "engines": {
    "node": ">=16"
  }
}
